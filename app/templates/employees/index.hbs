<h4>All Employees</h4>

<div class="row employee-list">
    <div class="col-md-7">
        <div class="table-responsive table-striped table-bordered">
            <table id="mytable" class="table table-bordred table-striped">
                <thead>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Practice</th>
                    <th>Edit</th> 
                    <th>Delete</th>
                </thead>
    			<tbody>
    			    {{#each model as |employee|}}
    					<tr>
    						<td>{{employee.name}}</td>
    						<td>{{employee.designation}}</td>
    						<td>{{employee.practice}}</td>
    						<td><p data-placement="top" data-toggle="tooltip" title="Edit">{{#link-to 'employees.edit' employee.id class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"}}<span class="glyphicon glyphicon-pencil"></span>{{/link-to}}</p></td>
    						<td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" {{action 'deleteEmployee' employee}}><span class="glyphicon glyphicon-trash"></span></button></p></td>
    					</tr>
    			    {{/each}} 
    			</tbody>    
			</table>
		</div>
	</div>
</div>